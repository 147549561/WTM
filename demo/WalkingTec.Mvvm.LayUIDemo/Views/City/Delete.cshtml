@model WalkingTec.Mvvm.LayUIDemo.ViewModels.CityVMs.CityVM

<wt:form vm="@Model">
  <wt:quote>确定要删除这条数据么：</wt:quote>
  <wt:row items-per-row="ItemsPerRowEnum.One">
    <wt:display field="Entity.Province.ProvinceName" />
    <wt:display field="Entity.CityName" />
    <wt:display field="Entity.LocationPoint" />
  </wt:row>
  <wt:hidden field="Entity.ID" />
  <wt:row align=" AlignEnum.Right">
    <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="删除" />
    <wt:closebutton />
  </wt:row>
</wt:form>
